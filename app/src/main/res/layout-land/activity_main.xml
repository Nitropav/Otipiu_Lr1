<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="1dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/input"
        app:layout_constraintVertical_bias="1.0">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="35dp">

            <Button
                android:id="@+id/piBTN"
                android:layout_width="0dp"
                android:textAllCaps="false"
                android:layout_height="40dp"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:onClick="piBTN"
                android:text="@string/pi"
                android:textSize="15sp"
                app:backgroundTint="#00BCD4" />

            <Button
                android:id="@+id/expBTN"
                android:layout_width="0dp"
                android:textAllCaps="false"
                android:layout_height="40dp"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:onClick="expBTN"
                android:text="@string/exp"
                android:textSize="15sp"
                app:backgroundTint="#00BCD4" />

            <Button
                android:id="@+id/clearBTN"

                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:onClick="clearBTN"
                android:text="@string/clear"
                app:backgroundTint="#F30303"
                android:textSize="15sp"/>

            <Button
                android:id="@+id/exponentBTN"
                android:layout_width="0dp"
                android:textAllCaps="false"
                android:layout_height="40dp"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:onClick="exponentBTN"
                android:text="@string/exponent"
                android:textSize="15sp"
                app:backgroundTint="#00BCD4" />

            <Button
                android:id="@+id/divideBTN"
                android:layout_width="0dp"
                android:textAllCaps="false"
                android:layout_height="40dp"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:onClick="divideBTN"

                android:text="@string/divide"
                android:textSize="15sp"
                app:backgroundTint="#00BCD4" />

            <Button
                android:id="@+id/backspaceBTN"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:onClick="backspaceBTN"
                android:text="@string/backspaceBTN"
                android:textAllCaps="false"
                android:textSize="15sp"
                app:backgroundTint="#00BCD4" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/lnBTN"
                android:layout_width="0dp"
                android:textAllCaps="false"
                android:layout_height="40dp"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:onClick="lnBTN"
                android:text="@string/ln"
                android:textSize="15sp"
                app:backgroundTint="#00BCD4" />

            <Button
                android:id="@+id/logBTN"
                android:layout_width="0dp"
                android:textAllCaps="false"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:layout_margin="2dp"
                android:onClick="logBTN"
                android:text="@string/log"
                android:textSize="15sp"
                app:backgroundTint="#00BCD4" />

            <Button
                android:id="@+id/oneBTN"
                android:layout_width="0dp"
                android:textAllCaps="false"
                android:layout_height="40dp"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:onClick="oneBTN"
                android:text="@string/one"
                android:textSize="15sp"
                app:backgroundTint="#918D8D" />

            <Button
                android:id="@+id/twoBTN"
                android:layout_width="0dp"
                android:textAllCaps="false"
                android:layout_height="40dp"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:onClick="twoBTN"
                android:text="@string/two"
                android:textSize="15sp"
                app:backgroundTint="#918D8D" />

            <Button
                android:id="@+id/threeBTN"
                android:layout_width="0dp"
                android:textAllCaps="false"
                android:layout_height="40dp"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:onClick="threeBTN"
                android:text="@string/three"
                android:textSize="15sp"
                app:backgroundTint="#918D8D" />

            <Button
                android:id="@+id/multiplyBTN"
                android:layout_width="0dp"
                android:textAllCaps="false"
                android:layout_height="40dp"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:onClick="multiplyBTN"
                android:text="@string/multiply"
                android:textSize="15sp"
                app:backgroundTint="#00BCD4" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/reversBTN"
                android:layout_width="0dp"
                android:textAllCaps="false"
                android:layout_height="40dp"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:onClick="reversBTN"
                android:text="@string/revers"
                android:textSize="15sp"
                app:backgroundTint="#00BCD4" />

            <Button
                android:id="@+id/sqrtBTN"
                android:layout_width="0dp"
                android:textAllCaps="false"
                android:layout_height="40dp"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:onClick="sqrtBTN"
                android:text="@string/sqrt"
                android:textSize="15sp"
                app:backgroundTint="#00BCD4" />

            <Button
                android:id="@+id/fourBTN"
                android:layout_width="0dp"
                android:textAllCaps="false"
                android:layout_height="40dp"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:onClick="fourBTN"
                android:text="@string/four"
                android:textSize="15sp"
                app:backgroundTint="#918D8D" />

            <Button
                android:id="@+id/fiveBTN"
                android:layout_width="0dp"
                android:textAllCaps="false"
                android:layout_height="40dp"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:onClick="fiveBTN"
                android:text="@string/five"
                android:textSize="15sp"
                app:backgroundTint="#918D8D" />

            <Button
                android:id="@+id/sixBTN"
                android:layout_width="0dp"
                android:textAllCaps="false"
                android:layout_height="40dp"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:onClick="sixBTN"
                android:text="@string/six"
                android:textSize="15sp"
                app:backgroundTint="#918D8D" />

            <Button
                android:id="@+id/subtractBTN"
                android:layout_width="0dp"
                android:textAllCaps="false"
                android:layout_height="40dp"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:onClick="subtractBTN"
                android:text="@string/subtract"
                android:textSize="15sp"
                app:backgroundTint="#00BCD4" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/factBTN"
                android:layout_width="0dp"
                android:textAllCaps="false"
                android:layout_margin="2dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:onClick="factorialBTN"
                android:text="@string/fact"
                android:textSize="15sp"
                app:backgroundTint="#00BCD4" />

            <Button
                android:id="@+id/tangBTN"
                android:layout_width="0dp"
                android:textAllCaps="false"
                android:layout_height="40dp"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:onClick="tangentBTN"
                android:text="@string/tang"
                android:textSize="15sp"
                app:backgroundTint="#00BCD4" />

            <Button
                android:id="@+id/sevenBTN"
                android:layout_width="0dp"
                android:textAllCaps="false"
                android:layout_height="40dp"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:onClick="sevenBTN"
                android:text="@string/seven"
                android:textSize="15sp"
                app:backgroundTint="#918D8D" />

            <Button
                android:id="@+id/eightBTN"
                android:layout_width="0dp"
                android:textAllCaps="false"
                android:layout_height="40dp"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:onClick="eightBTN"
                android:text="@string/eight"
                android:textSize="15sp"
                app:backgroundTint="#918D8D" />

            <Button
                android:id="@+id/nineBTN"
                android:layout_width="0dp"
                android:textAllCaps="false"
                android:layout_height="40dp"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:onClick="nineBTN"
                android:text="@string/nine"
                android:textSize="15sp"
                app:backgroundTint="#918D8D" />

            <Button
                android:id="@+id/addBTN"
                android:layout_width="0dp"
                android:textAllCaps="false"
                android:layout_height="40dp"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:onClick="addBTN"
                android:text="@string/add"
                android:textSize="15sp"
                app:backgroundTint="#00BCD4" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/sinusBTN"
                android:layout_width="0dp"
                android:textAllCaps="false"
                android:layout_margin="2dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:onClick="sinusBTN"
                android:text="@string/sinus"
                android:textSize="15sp"
                app:backgroundTint="#00BCD4" />

            <Button
                android:id="@+id/cosineBTN"
                android:layout_width="0dp"
                android:textAllCaps="false"
                android:layout_height="40dp"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:onClick="cosineBTN"
                android:text="@string/cosine"
                android:textSize="15sp"
                app:backgroundTint="#00BCD4" />

            <Button
                android:id="@+id/parenthesesBTN"
                android:layout_width="0dp"
                android:textAllCaps="false"
                android:layout_height="40dp"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:onClick="parenthesesBTN"
                android:text="@string/parentheses"
                android:textSize="15sp"
                app:backgroundTint="#00BCD4" />

            <Button
                android:id="@+id/zeroBTN"
                android:layout_width="0dp"
                android:textAllCaps="false"
                android:layout_height="40dp"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:onClick="zeroBTN"
                android:text="@string/zero"
                android:textSize="15sp"
                app:backgroundTint="#918D8D" />

            <Button
                android:id="@+id/pointBTN"
                android:layout_width="0dp"
                android:textAllCaps="false"
                android:layout_height="40dp"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:onClick="pointBTN"
                android:text="@string/point"
                android:textSize="15sp"
                app:backgroundTint="#00BCD4" />

            <Button
                android:id="@+id/equalsBTN"
                android:layout_width="0dp"
                android:textAllCaps="false"
                android:layout_height="40dp"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:onClick="equalsBTN"
                android:text="@string/equals"
                android:textSize="15sp"
                app:backgroundTint="#00BCD4" />
        </TableRow>
    </TableLayout>

    <EditText
        android:id="@+id/input"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:autofillHints="false"
        android:gravity="end"
        android:inputType="none"
        android:text="@string/display"
        android:textAlignment="textEnd"
        android:textSize="35sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="LabelFor"
        tools:text="@string/display" />
</androidx.constraintlayout.widget.ConstraintLayout>